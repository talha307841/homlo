# Database Configuration
DATABASE_URL=postgresql://homlo_user:homlo_password@localhost:5432/homlo
DATABASE_TEST_URL=postgresql://homlo_user:homlo_password@localhost:5432/homlo_test

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TEST_URL=redis://localhost:6379/1

# MinIO Configuration
MINIO_ROOT_USER=homlo
MINIO_ROOT_PASSWORD=homlo123
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET_NAME=homlo-assets
MINIO_SECURE=false

# SMS Configuration (for OTP)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-account-sid
SMS_AUTH_TOKEN=your-auth-token
SMS_FROM_NUMBER=your-from-number

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=false
SMTP_FROM_EMAIL=noreply@homlo.pk

# Payment Gateway Configuration
EASYPAISA_API_KEY=your-easypaisa-api-key
EASYPAISA_API_SECRET=your-easypaisa-api-secret
EASYPAISA_SANDBOX=true

JAZZCASH_API_KEY=your-jazzcash-api-key
JAZZCASH_API_SECRET=your-jazzcash-api-secret
JAZZCASH_SANDBOX=true

# Application Settings
APP_NAME=Homlo API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png", "image/webp"]
ALLOWED_DOCUMENT_TYPES=["application/pdf", "image/jpeg", "image/png"]

# Security Settings
SECURE_COOKIES=false
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Timezone
TIMEZONE=Asia/Karachi
