# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# MinIO Configuration
NEXT_PUBLIC_MINIO_ENDPOINT=http://localhost:9000
NEXT_PUBLIC_MINIO_BUCKET=homlo-assets

# Application Configuration
NEXT_PUBLIC_APP_NAME=Homlo
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Pakistan-first Airbnb-style marketplace

# Feature Flags
NEXT_PUBLIC_ENABLE_WHATSAPP_SHARE=true
NEXT_PUBLIC_ENABLE_CASH_ON_ARRIVAL=true
NEXT_PUBLIC_ENABLE_GUEST_SCORING=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=

# Maps (Optional)
NEXT_PUBLIC_MAPBOX_TOKEN=
NEXT_PUBLIC_MAPTILER_TOKEN=

# Payment Gateways
NEXT_PUBLIC_EASYPAISA_SANDBOX=true
NEXT_PUBLIC_JAZZCASH_SANDBOX=true

# Development Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
